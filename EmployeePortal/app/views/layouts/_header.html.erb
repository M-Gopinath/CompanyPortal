<header class="main-header">
  <a href="#" class="logo">
    <span class="logo-mini"><b>IBZ </b>P</span>
    <span class="logo-lg"><b>ITBEEZONE </b>Portal</span>
  </a>
  <nav class="navbar navbar-static-top" role="navigation">
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
    <!-- Navbar Right Menu -->
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <!-- User Account Menu -->
        <li class="dropdown user user-menu">
          <!-- Menu Toggle Button -->
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <!-- The user image in the navbar-->
            <% if current_employee.employee_personal_detail && current_employee.employee_personal_detail.avatar? %>
              <%= image_tag(current_employee.employee_personal_detail.avatar_url, class: "user-image") %>
            <% else %>
              <img src="/assets/missing.jpg" class="user-image" alt="User Image">
            <% end %>
            <!-- hidden-xs hides the username on small devices so only the image appears. -->
            <span class="hidden-xs">Alexander Pierce</span>
          </a>
          <ul class="dropdown-menu">
            <!-- The user image in the menu -->
            <li class="user-header">
              <% if current_employee.employee_personal_detail && current_employee.employee_personal_detail.avatar? %>
                <%= image_tag(current_employee.employee_personal_detail.avatar_url, class: "img-circle")  %>
              <% else %>
                <img src="/assets/missing.jpg" class="img-circle" alt="User Image">
              <% end %>
              <p>
                <%= current_employee.try(:full_name) %> - <%= current_employee.role.try(:name).capitalize %>
                <small>Display the Current Account</small>
              </p>
            </li>
            <!-- Menu Footer-->
            <li class="user-footer">
              <div class="pull-left">
                <%= link_to "Profile", personal_details_path, class: "btn btn-default btn-flat"%>
              </div>
              <div class="pull-right">
                <%= link_to "Log out", destroy_employee_session_path, method: :delete, class: "btn btn-default btn-flat"%>
              </div>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>