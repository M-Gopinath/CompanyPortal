<section class="content-header">
  <h1>
    Profile Details
  </h1>
</section>
<section class="content">
  <div class="row">
    <div class="col-md-3 col-sm-6 col-xs-12">
      <button class="data-modal-btn" data-toggle="modal" data-target="#personalModal">
        <div class="info-box">
          <span class="info-box-icon bg-aqua"><i class="fa fa-info-circle" aria-hidden="true"></i></span>
          <div class="info-box-content">
            <span class="info-box-text">Personal Detail</span>
          </div>
        </div>
      </button>
      <div id="personalModal" class="modal fade" role="dialog">
        <%= render partial: 'employee_personal_details/form', locals: {personal_detail: employee_personal_record } %>
      </div>
    </div>
    <div class="col-md-3 col-sm-6 col-xs-12">
      <button class="data-modal-btn" data-toggle="modal" data-target="#employeeAddress">
        <div class="info-box">
          <span class="info-box-icon bg-red">
          <i class="fa fa-address-book" aria-hidden="true"></i></span>
          <div class="info-box-content">
            <span class="info-box-text">Address</span>
          </div>
        </div>
      </button>
      <div id="employeeAddress" class="modal fade" role="dialog">
        <%= render partial: "employee_addresses/address_detail", locals: {employee: current_employee} %>
      </div>
    </div>
    <div class="clearfix visible-sm-block"></div>
    <div class="col-md-3 col-sm-6 col-xs-12">
      
      <button class="data-modal-btn" data-toggle="modal" data-target="#emergencyContact">
