            <span class="info-box-text">Emergency Contact</span>
          </div>
        </div>
      </button>
      <div id="emergencyContact" class="modal fade" role="dialog">
        <%= render partial: "employee_emergency_contact_details/contact_detail", locals: {employee: current_employee} %>
      </div>
    </div>
    <div class="col-md-3 col-sm-6 col-xs-12">
      <button class="data-modal-btn" data-toggle="modal" data-target="#employeeLanguage">
        <div class="info-box">
          <span class="info-box-icon bg-yellow"><i class="fa fa-language" aria-hidden="true"></i></i></span>
          <div class="info-box-content">
            <span class="info-box-text">Language </span>
          </div>
        </div>
      </button>
      <div id="employeeLanguage" class="modal fade" role="dialog">
        <%= render partial: "employee_languages/language_detail", locals: {employee: current_employee} %>
      </div>
    </div>
  </div>
  <div class="row">
