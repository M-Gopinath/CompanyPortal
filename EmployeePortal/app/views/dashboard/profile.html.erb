      <div id="employeeQualification" class="modal fade" role="dialog">
        <%= render partial: "employee_qualification_details/qualification_detail", locals: {employee: current_employee} %>
      </div>
    </div>
    <div class="col-md-3 col-sm-6 col-xs-12">
      <button class="data-modal-btn" data-toggle="modal" data-target="#employeeProfessional">
        <div class="info-box">
          <span class="info-box-icon bg-red"><i class="fa fa-info" aria-hidden="true"></i></span>
