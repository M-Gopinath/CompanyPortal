<!-- Modal -->

<div class="modal-dialog">

  <!-- Modal content-->
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">Create Time Tracker</h4>
    </div>
    <div class="modal-body">
      <%= form_for time_sheet, url: url, remote: true do |f| %>
        <% if time_sheet.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(time_sheet.errors.count, "error") %> prohibited this Time Sheet from being saved:</h2>

            <ul>
            <% time_sheet.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.label "task" %>
          <%= f.select :task_id, options_for_select([ ["Task1", 1], ["Task2", 2], ["Task3", 3], ["Task4", 4 ]], "Task1"), {}, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "Date" %>
          <%= f.text_field :entry_date, value: day, class: "form-control full_calendar" %>
        </div>
        <div class="form-group">
          <%= f.label :start_time %>
          <%= f.text_field :start_time, class: "timepicker form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :to_time %>
          <%= f.text_field :to_time, class: "timepicker form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="actions">
          <%= f.submit "Save", class: "btn btn-primary"%>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      <% end %>
    </div>
  </div>

</div>
