<section class="content">
  <div class="panel">
    <div class="row">
      <div class="col-md-12">
        <div class="col-md-4 content-header">
          <h1>Privacy Policy</h1><br />
        </div>
        <div class="col-md-4 content-header">
        </div>
        <div class="col-md-3 content-header">
        </div>
        <div class="header-border"></div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-5">
        <p align="center">Privacy Policy create</p>
        <%= form_for :privacy_policy, url: seed_table_create_privacy_policy_path do |f| %>
        <div class="modal-body">
          <div class="errors"></div>
          <div class="form-group">
            <%= f.label :topic %>
            <%= f.text_field :topic, required: true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_field :description, required: true, class: 'form-control' %>
          </div>
        </div>
        <%= f.submit class: "btn btn-primary pd-10" %>
        <%end%>
      </div>
      <div class="col-md-7">
        <p align="center">Privacy Policy List</p>
        <table class="table">
          <thead>
            <tr>
              <th>Privacy Policy Topic</th>
              <th>Privacy Policy Discription</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @privacy_policies.each do |privacy_policy| %>
            <tr>
              <td><%= privacy_policy.topic %></td>
              <td><%= privacy_policy.description %></td>
              <td class="action-link">
                <a href="" data-toggle="modal" data-target="#privacy_policy_id_<%= privacy_policy.id%>">
                  <i class="fa fa-user-circle-o"></i>
                </a>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>


<% @privacy_policies.each do |privacy_policy| %>
  <!-- Modal -->
  <div id="privacy_policy_id_<%= privacy_policy.id%>" class="modal fade" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Privacy Policy</h4>
        </div>
        <div class="modal-body">
          <p>Privacy Policy Topic : <span><%= privacy_policy.topic %></span></p>
          <p>Privacy Policy Description : <span><%= privacy_policy.description %></span></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>

    </div>
  </div>
<% end %>
