<section class="content">
  <div class="panel">
    <div class="row">
      <div class="col-md-12">
        <div class="col-md-4 content-header">
          <h1>Task Status</h1><br />
        </div>
        <div class="col-md-4 content-header">
        </div>
        <div class="col-md-3 content-header">
        </div>
        <div class="header-border"></div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-5">
        <p align="center">Task Status create</p>
        <%= form_for :task_status, url: seed_table_create_task_status_path do |f| %>
        <div class="modal-body">
          <div class="errors"></div>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, required: true, class: 'form-control' %>
          </div>
        </div>
        <%= f.submit class: "btn btn-primary pd-10" %>
        <%end%>
      </div>
      <div class="col-md-7">
        <p align="center">Task Status List</p>
        <table class="table">
          <thead>
            <tr>
              <th>Task Status Name</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @task_statuses.each do |task_status| %>
            <tr>
              <td><%= task_status.name %></td>
              <td class="action-link">
                <a href="" data-toggle="modal" data-target="#task_status_id_<%= task_status.id%>">
                  <i class="fa fa-user-circle-o"></i>
                </a>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

<% @task_statuses.each do |task_status| %>
  <!-- Modal -->
  <div id="task_status_id_<%= task_status.id%>" class="modal fade" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Task Status</h4>
        </div>
        <div class="modal-body">
          <p>Task Status Name : <span><%= task_status.name %></span></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>

    </div>
  </div>
<% end %>
