<section class="content">
  <div class="panel">
    <div class="row">
      <div class="col-md-12">
        <div class="col-md-4 content-header">
          <h1>Writing Proficiency</h1><br />
        </div>
        <div class="col-md-4 content-header">
        </div>
        <div class="col-md-3 content-header">
        </div>
        <div class="header-border"></div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-5">
        <p align="center">Writing Proficiency create</p>
        <%= form_for :writing_proficiency, url: seed_table_create_writing_proficiency_path do |f| %>
        <div class="modal-body">
          <div class="errors"></div>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, required: true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :short_name %>
            <%= f.text_field :short_name, required: true, class: 'form-control' %>
          </div>
        </div>
        <%= f.submit class: "btn btn-primary pd-10" %>
        <%end%>
      </div>
      <div class="col-md-7">
        <p align="center">Writing Proficiency List</p>
        <table class="table">
          <thead>
            <tr>
              <th>Writing Proficiency Name</th>
              <th>Writing Proficiency Short Name</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @writing_proficiencies.each do |writing_proficiency| %>
            <tr>
              <td><%= writing_proficiency.name %></td>
              <td><%= writing_proficiency.short_name %></td>
              <td class="action-link">
                <a href="" data-toggle="modal" data-target="#writing_proficiency_id_<%= writing_proficiency.id%>">
                  <i class="fa fa-user-circle-o"></i>
                </a>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>



<% @writing_proficiencies.each do |writing_proficiency| %>
  <!-- Modal -->
  <div id="writing_proficiency_id_<%= writing_proficiency.id%>" class="modal fade" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Writing Proficiency</h4>
        </div>
        <div class="modal-body">
          <p>Writing Proficiency Topic : <span><%= writing_proficiency.name %></span></p>
          <p>Writing Proficiency Description : <span><%= writing_proficiency.short_name %></span></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>

    </div>
  </div>
<% end %>
