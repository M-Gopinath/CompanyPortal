<section class="content">
  <div class="panel">
    <div class="row">
      <div class="col-md-12">
        <div class="col-md-4 content-header">
          <h1>Role</h1><br />
        </div>
        <div class="col-md-4 content-header">
        </div>
        <div class="col-md-3 content-header">
        </div>
        <div class="header-border"></div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-5">
        <p align="center">Role Create</p>
          <%= form_for :role, url: seed_table_create_role_path do |f| %>
          <div class="modal-body">
            <div class="errors"></div>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, required: true, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :short_name %>
              <%= f.text_field :short_name, required: true, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :grade %>
              <%= f.text_field :grade, required: true, class: 'form-control' %>
            </div>
          </div>
          <%= f.submit class: "btn btn-primary pd-10" %>
          <%end%>
      </div>
      <div class="col-md-7">
        <p align="center">Role List</p>
        <table class="table">
          <thead>
            <tr>
              <th>Role Name</th>
              <th>Short Name</th>
              <th>Grade</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @roles.each do |role| %>
            <tr>
              <td><%= role.name %></td>
              <td><%= role.short_name %></td>
              <td><%= role.grade %></td>
              <td class="action-link">
                <a href="" data-toggle="modal" data-target="#role_id_<%= role.id%>">
                  <i class="fa fa-user-circle-o"></i>
                </a>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

<% @roles.each do |role| %>
  <!-- Modal -->
  <div id="role_id_<%= role.id%>" class="modal fade" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Role</h4>
        </div>
        <div class="modal-body">
          <p>Role Name : <span><%= role.name %></span></p>
          <p>Short Name : <span><%= role.short_name %></span></p>
          <p>Grade : <span><%= role.grade %></span></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>

    </div>
  </div>
<% end %>
