<section class="content">
  <div class="panel">
    <div class="row">
      <div class="col-md-12">
        <div class="col-md-4 content-header">
          <h1>Education Certificate</h1><br />
        </div>
        <div class="col-md-4 content-header">
        </div>
        <div class="col-md-3 content-header">
        </div>
        <div class="header-border"></div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-5">
        <p align="center">Education Certificate Create</p>
        <%= form_for :education_certificate, url: seed_table_create_education_certificate_path do |f| %>
        <div class="modal-body">
          <div class="errors"></div>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, required: true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :short_name %>
            <%= f.text_field :short_name, required: true, class: 'form-control' %>
          </div>
        </div>
        <%= f.submit class: "btn btn-primary pd-10" %>
        <%end%>
      </div>
      <div class="col-md-7">
        <p align="center">Education Certificate List</p>
        <table class="table">
          <thead>
            <tr>
              <th>Education Certificate Name</th>
              <th>Education Certificate Short Name</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @education_certificates.each do |education_certificat| %>
            <tr>
              <td><%= education_certificat.name %></td>
              <td><%= education_certificat.short_name %></td>
              <td class="action-link">
                <a href="" data-toggle="modal" data-target="#education_certificate_id_<%= education_certificat.id%>">
                  <i class="fa fa-user-circle-o"></i>
                </a>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

<% @education_certificates.each do |education_certificat| %>
  <!-- Modal -->
  <div id="education_certificate_id_<%= education_certificat.id%>" class="modal fade" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Education Certificate</h4>
        </div>
        <div class="modal-body">
          <p>Education Certificate Name : <span><%= education_certificat.name %></span></p>
          <p>Education Certificate Short Name : <span><%= education_certificat.short_name %></span></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>

    </div>
  </div>
<% end %>
