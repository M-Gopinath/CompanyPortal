<h3>Hi <%= @approver.full_name %></h3>
<p>
  <%= @employee.full_name %> has applied permission
</p>
<p>
  Date: <%= @permission.permission_date.strftime("%d-%m-%Y") %>
</p>
<p>
  From: <%= @permission.from_time.strftime("%I:%M %p") %>
</p>
<p>
  To: <%= @permission.to_time.strftime("%I:%M %p") %>
</p>
<p>
  Reason : <%= @permission.reason %>
</p>
<p>
<%= link_to "Approve", leave_permissions_approve_leaves_url(leave_id: @permission.id, leave_permission_status_id: 2),class: "btn btn-default remove-model"%>
</p>
<p>
<%= link_to "Rejected",leave_permissions_reject_leaves_url(leave_id: @permission.id, leave_permission_status_id: 3),class: "btn btn-default remove-model" %>
</p>