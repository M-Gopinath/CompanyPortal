<div class="row">
  <div class="col-md-3">
    <label for="Certificate Type">Employment Name</label>
  </div>
  <div class="col-md-2">
    <label for="Certificate Id">From Date</label>
  </div>
  <div class="col-md-2">
    <label for="Certificate File">To Date</label>
  </div>
  <div class="col-md-3">
    <label for="Certificate File">Designation</label>
  </div>
  <div class="col-md-2">
    <label for="Actions">Actions</label>
  </div>
</div>
<% employee_professional_details.each do |uec| %>
  <div class="emp-professional_<%= uec.id %>">
    <div class="row">
      <div class="col-md-3">
        <%= uec.employment_name %>
      </div>
      <div class="col-md-2">
        <%= uec.from_date %>
      </div>
      <div class="col-md-2">
        <%= uec.to_date %>
      </div>
      <div class="col-md-3">
        <%= uec.designation %>
      </div>
      <div class="col-md-1">
        <%= link_to 'Edit', edit_employee_professional_detail_path(uec), remote: true %>
      </div>
      <div class="col-md-1">
        <%= link_to employee_professional_detail_path(uec, employee_id: employee.id), method: :delete, data: { confirm: 'Are you sure?' }, remote: true do %>
          <i class="fa fa-times" aria-hidden="true"></i>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<div class="edu-cert-form">
  <%= render partial: "employee_professional_details/new_form", locals: {employee_professional_detail: employee_professional_detail, employee: employee} %>
</div>
