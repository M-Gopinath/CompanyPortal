 <section class="content">
 	<div class="panel">
 		<div class="row">
 			<div class="col-md-12">
 				<div class="col-md-4 content-header">
 					<h1>Deactive Listing</h1><br />
 					<p class="displaying_employees"><%= page_entries_info @deactived_employees %></p>
 				</div>
 				<div class="col-md-4 content-header">
 					<%= form_for_filterrific @filterrific, html: { id: 'filterrific-no-ajax-auto-submit' }, remote: true do |f| %>
            <%= f.text_field(
              :search_query,
              class: 'filterrific-periodically-observed search-input col-xs-11 search-clients form-control',placeholder: "Search"
            ) %>
            <%= f.hidden_field :sorted_by, value: "created_at_desc" %>
            <%= render_filterrific_spinner %>
          <%end%>
 				</div>
 				<div class="col-md-4 content-header">
 					<div class="top-links new-top">
 						<%= link_to 'xls', deactive_employees_path(format: "xls") %>
            <%= link_to 'csv', deactive_employees_path(format: "csv") %>
            <%= link_to 'pdf', deactive_employees_path(format: :pdf) %>
 					</div>
 				</div>
 				<div class="header-border"></div>
 			</div>
 		</div>
 		<div class="table-responsive">
 			<table class="table">
 				<thead>
 					<tr>
 						<th>Emb.id</th>
 						<th>Firstname</th>
 						<th>Lastname</th>
 						<th>Email</th>
 						<th colspan="2" class="text-center">Action</th>
 					</tr>
 				</thead>
 				<tbody class="deactive_listings">
          <%= render partial: "deactive", locals: {deactived_employees: @deactived_employees} %>
 				</tbody>
 			</table>
 		</div>
 		<div class="pagination-content">
 			<%= will_paginate @deactived_employees, renderer: BootstrapPagination::Rails %>
 		</div>
 	</div>
 </section>