<div class="table-responsive policy-content">
  <table class="table">
    <thead>
      <tr>
        <th>Topic</th>
        <th width="50%">Description</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>
    <tbody>
      <% privacy_policies.each do |privacy_policy| %>
      <tr>
        <td><%= privacy_policy.topic %></td>
        <td><%= privacy_policy.description %></td>
        <td class="action-link">
          <a data-toggle="modal" data-target="#privacy_policy_<%= privacy_policy.id%>"><i class="fa fa-user-circle-o"></i></a>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="pagination-content">
  <%= will_paginate privacy_policies, renderer: BootstrapPagination::Rails %>
</div>


<% if privacy_policies.present? %>
  <% privacy_policies.each do |ac|%>
    <div id="privacy_policy_<%= ac.id%>" class="modal fade" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Privacy Policy</h4>
          </div>
          <div class="modal-body">
            <p>Topic : <span><%= ac.try(:topic) %></span></p>
            <p>Description : <span><%= ac.try(:description) %></span></p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>