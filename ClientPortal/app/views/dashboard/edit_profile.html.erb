<section class="content">
	<div class="panel">
		<div class="row">
			<div class="wel">
				<h2 align="center">Client Edit Profile</h2>
				<div class="col-md-8 col-sm-12">
					<div class="panel pd-25">
						<%= form_for :client, url: dashboard_update_client_path do |f| %>
						<div class="form-group row">
							<%= f.label :email, class: 'col-sm-4 col-form-label' %>
							<div class="col-sm-8">
								<%= f.email_field :email, :readonly => true, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group row">
							<%= f.label :first_name, class: 'col-sm-4 col-form-label' %>
							<div class="col-sm-8">
								<%= f.text_field :first_name, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group row">
							<%= f.label :last_name, class: 'col-sm-4 col-form-label' %>
							<div class="col-sm-8">
								<%= f.text_field :last_name, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group row">
							<%= f.label :full_name, class: 'col-sm-4 col-form-label' %>
							<div class="col-sm-8">
								<%= f.text_field :full_name, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group row">
							<%= f.label :contact_number, class: 'col-sm-4 col-form-label' %>
							<div class="col-sm-8">
								<%= f.text_field :contact_number, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group row">
							<%= f.label :secondary_email, class: 'col-sm-4 col-form-label' %>
							<div class="col-sm-8">
								<%= f.email_field :secondary_email, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group row">
							<%= f.label :secondary_contact_number, class: 'col-sm-4 col-form-label' %>
							<div class="col-sm-8">
								<%= f.text_field :secondary_contact_number, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group row">
							<%= f.label :address, class: 'col-sm-4 col-form-label' %>
							<div class="col-sm-8">
								<%= f.text_area :address, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group row">
							<%= f.label :city, class: 'col-sm-4 col-form-label' %>
							<div class="col-sm-8">
								<%= f.text_field :city, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group row">
							<%= f.label :state, class: 'col-sm-4 col-form-label' %>
							<div class="col-sm-8">
								<%= f.text_field :state, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group row">
							<%= f.label :country, class: 'col-sm-4 col-form-label' %>
							<div class="col-sm-8">
								<%= f.text_field :country, class: 'form-control' %>
							</div>
						</div>
						<div class="form-group row">
							<%= f.label :zip_code, class: 'col-sm-4 col-form-label' %>
							<div class="col-sm-8">
								<%= f.text_field :zip_code, class: 'form-control' %>
							</div>
						</div>
						<hr>
						<h4>Social Network</h4>
						<%= link_to current_client.facebook_present? ? "#" : client_facebook_omniauth_authorize_path(client_id: f.object.try(:id)) do %>
							<i class="fa fa-facebook-square fa-social-1" style="<%= current_client.facebook_present? ? 'color:green' : 'color:blue' %>"></i>
						<%end%>
						<%= link_to current_client.gmail_present? ? "#" : client_google_oauth2_omniauth_authorize_path do %>
							<i class="fa fa-google-plus-square fa-social-1" style="<%= current_client.gmail_present? ? 'color:green' : 'color:blue' %>"></i>
						<%end%>
						<%= link_to current_client.twitter_present? ? "#" : client_twitter_omniauth_authorize_path(client_id: f.object.try(:id)) do %>
							<i class="fa fa-twitter-square fa-social-1" style="<%= current_client.twitter_present? ? 'color:green' : 'color:blue' %>"></i>
						<%end%>
						<%= link_to current_client.linkedin_present? ? "#" : client_linkedin_omniauth_authorize_path do %>
							<i class="fa fa-linkedin-square fa-social-1" style="<%= current_client.linkedin_present? ? 'color:green' : 'color:blue' %>"></i>
						<%end%>
						<div class="form-group row">
							<div class="col-sm-12">
								<%= f.submit "Update" , class: 'btn btn-primary'%>
							</div>
						</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>