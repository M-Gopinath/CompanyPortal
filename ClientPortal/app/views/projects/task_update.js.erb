<% if @task.errors.present? %>
	$(".errors").text("");
  <% @task.errors.full_messages.each do |error| %>
    $(".errors").append("<li><%= error %></li>");
  <% end %>
<%else%>
	$('.edit_task').modal('toggle');
	$('.modal-backdrop').remove();
	$('.client_project_list').html("<%= escape_javascript(render 'projects/project_list') %>");
<%end%>