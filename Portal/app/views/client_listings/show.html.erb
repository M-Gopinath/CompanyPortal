<section class="content">
	<div class="panel">
		<div class="row">
			<div class="wel">
				<div class="col-sm-9 col-md-9 ht-100 main-content">
					<h2 align="center">Client Edit Profile</h2>
					<div class="col-md-8 col-sm-12">
						<div class="panel pd-25">
							<%= form_for @client, url: update_clients_path, method: :put do |f| %>
								<div class="form-group row">
									<%= f.label :email, class: 'col-sm-4 col-form-label' %>
									<div class="col-sm-8">
										<%= @client.try(:email) %>
									</div>
								</div>
								<div class="form-group row">
									<%= f.label :first_name, class: 'col-sm-4 col-form-label' %>
									<div class="col-sm-8">
										<%= @client.try(:first_name) %>
									</div>
								</div>
								<div class="form-group row">
									<%= f.label :last_name, class: 'col-sm-4 col-form-label' %>
									<div class="col-sm-8">
										<%= @client.try(:last_name) %>
									</div>
								</div>
								<div class="form-group row">
									<%= f.label :full_name, class: 'col-sm-4 col-form-label' %>
									<div class="col-sm-8">
										<%= @client.try(:full_name) %>
									</div>
								</div>
								<div class="form-group row">
									<%= f.label :contact_number, class: 'col-sm-4 col-form-label' %>
									<div class="col-sm-8">
										<%= @client.try(:contact_number) %>
									</div>
								</div>
								<div class="form-group row">
									<%= f.label :secondary_email, class: 'col-sm-4 col-form-label' %>
									<div class="col-sm-8">
										<%= @client.try(:secondary_email) %>
									</div>
								</div>
								<div class="form-group row">
									<%= f.label :secondary_contact_number, class: 'col-sm-4 col-form-label' %>
									<div class="col-sm-8">
										<%= @client.try(:secondary_contact_number) %>
									</div>
								</div>
								<div class="form-group row">
									<%= f.label :address, class: 'col-sm-4 col-form-label' %>
									<div class="col-sm-8">
										<%= @client.try(:address) %>
									</div>
								</div>
								<div class="form-group row">
									<%= f.label :city, class: 'col-sm-4 col-form-label' %>
									<div class="col-sm-8">
										<%= @client.try(:city) %>
									</div>
								</div>
								<div class="form-group row">
									<%= f.label :state, class: 'col-sm-4 col-form-label' %>
									<div class="col-sm-8">
										<%= @client.try(:state) %>
									</div>
								</div>
								<div class="form-group row">
									<%= f.label :country, class: 'col-sm-4 col-form-label' %>
									<div class="col-sm-8">
										<%= @client.try(:country) %>
									</div>
								</div>
								<div class="form-group row">
									<%= f.label :zip_code, class: 'col-sm-4 col-form-label' %>
									<div class="col-sm-8">
										<%= @client.try(:zip_code) %>
									</div>
								</div>
								<div class="form-group row">
									<div class="col-sm-12">
										<%= link_to "Edit", edit_clients_path(@client), class: "btn btn-primary" %>
									</div>
								</div>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>