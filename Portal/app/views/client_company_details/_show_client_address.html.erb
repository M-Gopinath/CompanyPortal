<div class="form-group row">
	<label style="padding:10px;">Same as Client Address: </label><%= @client.same_as_client_address? %>
</div>

<div class="form-group row">
	<label class="col-sm-4 col-form-label">Name</label>
	<div class="col-sm-8">
		<%= @client_company.try(:name) %>
	</div>
</div>
<div class="form-group row">
	<label class="col-sm-4 col-form-label">Contact Number</label>
	<div class="col-sm-8">
		<%= @client_company.try(:contact_number) %>
	</div>
</div>
<div class="form-group row">
  <label class="col-sm-4 col-form-label">Address</label>
  <div class="col-sm-8">
    <%= @client_company.try(:address) %>
  </div>
</div>
<div class="form-group row">
  <label class="col-sm-4 col-form-label">City</label>
  <div class="col-sm-8">
    <%= @client_company.try(:city) %>
  </div>
</div>
<div class="form-group row">
  <label class="col-sm-4 col-form-label">State</label>
  <div class="col-sm-8">
    <%= @client_company.try(:state) %>
  </div>
</div>
<div class="form-group row">
  <label class="col-sm-4 col-form-label">Country</label>
  <div class="col-sm-8">
    <%= @client_company.try(:country) %>
  </div>
</div>
<div class="form-group row">
  <label class="col-sm-4 col-form-label">City</label>
  <div class="col-sm-8">
    <%= @client_company.try(:zip_code) %>
  </div>
</div>
<div class="form-group row">
	<div class="col-sm-12">
    <%= link_to "Edit", client_edit_companies_path(@client), class: "btn btn-portal" %>
	</div>
</div>