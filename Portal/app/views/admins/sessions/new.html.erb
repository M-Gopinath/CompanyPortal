<div class="row main">
  <div class="panel-heading">
    <div class="panel-title text-center">
      <h1 class="title">Login</h1>
      <hr />
    </div>
  </div>
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="box-body">
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
           <%= f.email_field :email, autofocus: true, class: "form-control", id: "exampleInputEmail1", placeholder: "Enter email" %>
        </div>

        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
           <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "exampleInputPassword1", placeholder: "Password" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="checkbox">
            <label>
             <%= f.check_box :remember_me %> Check me out
            </label>
          </div>
        <% end %>
      </div>

      <div class="box-footer">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
  
    <% end %>
  </div>
  <div class="col-md-4"></div>
</div>