<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title text-center"><b>Salary</b></h4>
    </div>
    <div class="modal-body">
      <%= form_for salary, url: url do |f| %>
        <%= f.hidden_field :employee_id, value: employee.id %>
        <div class="form-group">
          <%= f.label "Salary Date" %>
          <%= f.text_field :salary_date, class: "form-control financial_date", required: true %>
        </div>
        <div class="form-group">
          <%= f.label :salary %>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-inr" aria-hidden="true"></i></span>
            <%= f.text_field :salary, class: "form-control currency", required: true %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :breakage_money %>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-inr" aria-hidden="true"></i></span>
            <%= f.text_field :breakage_money, class: "form-control currency", required: true %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label "Balance Money" %>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-inr" aria-hidden="true"></i></span>
            <%= f.text_field :balance_money_to_give, class: "form-control currency", required: true %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit salary.new_record? ? "Save" : "Update", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
