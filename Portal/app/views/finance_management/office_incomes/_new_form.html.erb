<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title text-center"><b>Income</b></h4>
    </div>
    <div class="modal-body">
      <%= form_for income, url: url do |f| %>
        <div class="form-group">
          <%= f.label :client_id %>
          <%= f.select :client_id, options_for_select(Client.all.map{|c| [c.email, c.id]}, income.client_id), {prompt: "Select"},  class: "form-control income-client", required: true %>
        </div>
        <div class="form-group">
          <%= f.label :project_id %>
          <%= income.project_id %>
          <%= f.select :project_id, options_for_select(get_project_details(income), income.project_id), {prompt: "Select"},  class: "form-control income-project", required: true %>
        </div>
        <div class="form-group">
          <%= f.label :transaction_via_id %>
          <%= f.select :transaction_via_id, options_for_select(TransactionVium.all.map{|t| [t.name, t.id]}, income.transaction_via_id), {prompt: "Select"}, class: "form-control", required: true %>
        </div>
        <div class="form-group">
          <%= f.label "Money Received Date" %>
          <%= f.text_field :money_received_date, class: "form-control financial_date", required: true %>
        </div>
        <div class="form-group">
          <%= f.label :money_received %>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-inr" aria-hidden="true"></i></span>
            <%= f.text_field :money_received, class: "form-control currency", required: true %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit income.new_record? ? "Save" : "Update", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
