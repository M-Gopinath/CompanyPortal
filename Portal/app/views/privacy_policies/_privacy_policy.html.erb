<div class="table-responsive policy-content">
  <table class="table">
    <thead>
      <tr>
        <th>Topic</th>
        <th width="50%">Description</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>
    <tbody>
      <% privacy_policies.each do |privacy_policy| %>
      <tr>
        <td><%= privacy_policy.topic %></td>
        <td><%= privacy_policy.description %></td>
        <td>
          <%= link_to 'Show', privacy_policy, class: "btn btn-info btn-xs" %>
          <%= link_to 'Edit', edit_privacy_policy_path(privacy_policy), class: "btn btn-primary btn-xs" %>
          <%= link_to 'Delete', privacy_policy, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table> 
  <%= link_to 'New Privacy Policy', new_privacy_policy_path, class:"btn btn-default" %>
</div>
<div class="pagination-content">
  <%= will_paginate privacy_policies, renderer: BootstrapPagination::Rails %>
</div>