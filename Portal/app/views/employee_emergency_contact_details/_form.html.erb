<div class="row">
  <div class="col-md-3">
    <label for="Certificate Type">Contact Name</label>
  </div>
  <div class="col-md-2">
    <label for="Certificate Id">Relationship</label>
  </div>
  <div class="col-md-2">
    <label for="Certificate File">Primary</label>
  </div>
  <div class="col-md-3">
    <label for="Certificate File">Contact Number</label>
  </div>
  <div class="col-md-2">
    <label for="Actions">Actions</label>
  </div>
</div>

<% employee_contact_details.each do |uec| %>
  <div class="emp-emergency_<%= uec.id %>">
    <div class="row">
      <div class="col-md-3">
        <%= uec.contact_person_name %>
      </div>
      <div class="col-md-2">
        <%= uec.relationship %>
      </div>
      <div class="col-md-2">
        <%= uec.primary %>
      </div>
      <div class="col-md-3">
        <%= uec.contact_number %>
      </div>
      <div class="col-md-1">
        <%= link_to 'Edit', edit_employee_emergency_contact_detail_path(uec), remote: true %>
      </div>
      <div class="col-md-1">
        <%= link_to employee_emergency_contact_detail_path(uec, employee_id: employee.id), method: :delete, data: { confirm: 'Are you sure?' }, remote: true do %>
          <i class="fa fa-times" aria-hidden="true"></i>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
<% unless employee_contact_details.count >= 4 %>
  <div class="emergency-form row">
    <%= render partial: "employee_emergency_contact_details/new_form", locals: {employee_contact_detail: employee_contact_detail, employee: employee} %>
  </div>
<% end %>

